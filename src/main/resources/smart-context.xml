<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-4.0.xsd
            http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
            http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

    <bean id="MyCar" class="com.smart.Car"
          init-method="myInit"
          destroy-method="myDestroy"
          p:brand="Nissan X-Trail"
          p:color="Red"
          p:maxSpeed="220"/>
    <!--Constructor args with different type
        no need declare args index and type
        java reflection will find the correct args
    -->
    <bean id="MyWorker" class="com.smart.Worker">
        <constructor-arg>
            <value>26</value>
        </constructor-arg>
        <constructor-arg>
            <ref bean="MyCar"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="MyOffice"/>
        </constructor-arg>
    </bean>

    <!--Constructor args with same type, need index-->
    <bean id="MyOffice" class="com.smart.Office">
        <constructor-arg index="0" value="6 Simei Rise"/>
        <constructor-arg index="1" value="Maos Company"/>
    </bean>

    <!--circular reference-->
    <!--
    <bean id="MyA" class="com.smart.ClassA">
        <constructor-arg>
            <ref bean="MyB"/>
        </constructor-arg>
    </bean>

    <bean id="MyB" class="com.smart.ClassB">
        <constructor-arg>
            <ref bean="MyA"/>
        </constructor-arg>
    </bean>
    -->

    <!--static factory injection-->
    <!--if not static factory, need define factory bean
    then declare factory-bean -> factory bean id
    -->
    <bean id="NewCar" class="com.smart.factory.CarFactory"
          factory-method="createCar">
        <constructor-arg index="0" value="BMW"/>
        <constructor-arg index="1" value="white"/>
    </bean>
</beans>
